<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/verify_otp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brackground"
    android:padding="16dp">

    <Button
        android:id="@+id/btnback"
        android:layout_width="25dp"
        android:layout_height="15dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/ic_back" />

    <LinearLayout
        android:id="@+id/layoutTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SOUND"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PLAY"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/image_id_music"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_music" />
    </LinearLayout>

    <TextView
        android:id="@+id/title_verify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:layout_marginBottom="30dp"
        android:text="Xác Nhận OTP"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/labelOtp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_verify"
        android:layout_marginStart="26dp"
        android:layout_marginTop="10dp"
        android:text="Mã OTP"
        android:textColor="@color/black"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/edtOtp"
        android:layout_width="324dp"
        android:layout_height="44dp"
        android:layout_below="@id/labelOtp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/rounded_input"
        android:hint="Nhập mã OTP"
        android:inputType="number"
        android:maxLength="6"
        android:padding="10dp" />

    <Button
        android:id="@+id/btnVerify"
        android:layout_width="253dp"
        android:layout_height="56dp"
        android:layout_below="@id/edtOtp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_login"
        android:text="Xác nhận"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnVerify"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text=""
        android:textColor="#FF0000" />

    <TextView
        android:id="@+id/about"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvMessage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="Khi sử dụng Sound Play, bạn đồng ý với Điều khoản và Chính sách bảo mật"
        android:textAlignment="center"
        android:textColor="@color/white" />

</RelativeLayout>