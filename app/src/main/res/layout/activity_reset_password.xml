<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/reset_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brackground"
    android:padding="16dp">

    <Button
        android:id="@+id/btnback"
        android:layout_width="25dp"
        android:layout_height="15dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/ic_back" />

    <LinearLayout
        android:id="@+id/layoutTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SOUND"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PLAY"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/image_id_music"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_music" />
    </LinearLayout>

    <TextView
        android:id="@+id/title_reset_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="20dp"
        android:text="Đặt Lại Mật Khẩu"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/labelPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_reset_password"
        android:layout_marginStart="26dp"
        android:layout_marginTop="10dp"
        android:text="Mật Khẩu Mới"
        android:textColor="@color/black"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/edtPassword"
        android:layout_width="324dp"
        android:layout_height="44dp"
        android:layout_below="@id/labelPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/rounded_input"
        android:hint="Nhập mật khẩu mới"
        android:inputType="textPassword"
        android:padding="10dp" />

    <TextView
        android:id="@+id/labelConfirmPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtPassword"
        android:layout_marginStart="26dp"
        android:layout_marginTop="10dp"
        android:text="Xác Nhận Mật Khẩu"
        android:textColor="@color/black"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/edtConfirmPassword"
        android:layout_width="324dp"
        android:layout_height="44dp"
        android:layout_below="@id/labelConfirmPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/rounded_input"
        android:hint="Xác nhận mật khẩu"
        android:inputType="textPassword"
        android:padding="10dp" />

    <Button
        android:id="@+id/btnResetPassword"
        android:layout_width="253dp"
        android:layout_height="56dp"
        android:layout_below="@id/edtConfirmPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_login"
        android:text="Đặt lại mật khẩu"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnResetPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text=""
        android:textColor="#FF0000" />

    <TextView
        android:id="@+id/about"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvMessage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Khi sử dụng Sound Play, bạn đồng ý với Điều khoản và Chính sách bảo mật"
        android:textAlignment="center"
        android:textColor="@color/white" />
</RelativeLayout>