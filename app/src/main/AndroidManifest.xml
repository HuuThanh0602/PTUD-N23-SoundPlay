<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:enableOnBackInvokedCallback="true"
    package="vn.edu.tlu.cse.soundplay">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.SoundPlay"
        tools:targetApi="31">

        <activity
            android:name=".ui.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.SoundPlay"
            android:label="">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.HomeActivity"
            android:exported="false"
            android:theme="@style/Theme.SoundPlay"
            android:label="" />

        <activity
            android:name=".ui.PlaylistDetailActivity"
            android:exported="false"
            android:label="" />

        <activity
            android:name=".ui.ProfileActivity"
            android:exported="false"
            android:label="" />

        <activity
            android:name=".ui.LibraryActivity"
            android:exported="false"
            android:label="" />

        <activity
            android:name=".ui.SearchActivity"
            android:exported="false"
            android:label="" />

        <activity
            android:name=".ui.PlaySongActivity"
            android:exported="false"
            android:label="" />

        <activity
            android:name=".ui.FavouriteActivity"
            android:exported="false"
            android:label="" />

        <activity
            android:name=".ui.RegisterActivity"
            android:exported="false"
            android:label="" />

        <activity
            android:name=".ui.VerifyOtpActivity"
            android:exported="false"
            android:label="" />

        <activity
            android:name=".ui.ForgotPasswordActivity"
            android:exported="false"
            android:label="" />

        <activity
            android:name=".ui.ResetPasswordActivity"
            android:exported="false"
            android:label="" />

        <service
            android:name=".service.MusicService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="mediaPlayback"
            tools:ignore="ForegroundServicePermission" />

    </application>
</manifest>